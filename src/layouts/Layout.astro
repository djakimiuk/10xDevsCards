---
import "../styles/globals.css";
import { ThemeToggle } from "../components/ThemeToggle";

export interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const mainClass = "container mx-auto px-4 pt-20";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline src="/src/lib/theme-init.js"></script>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased font-sans">
    <header class="fixed top-0 w-full border-b border-border bg-background/80 backdrop-blur z-50">
      <div class="container mx-auto flex h-16 items-center px-4">
        <a href="/" class="mr-auto font-bold"> 10xDevsCards </a>
        <div class="ml-auto">
          <ThemeToggle client:load />
        </div>
      </div>
    </header>
    <main class={mainClass}>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
