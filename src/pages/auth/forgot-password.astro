export const prerender = false;
---

<Layout title="Reset Password - 10xDevsCards">
  <main class="container max-w-4xl mx-auto p-6 flex items-center justify-center">
    <ForgotPasswordForm client:load onSubmit={sendPasswordResetEmail} />
  </main>
</Layout>
